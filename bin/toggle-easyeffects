# launch a process into background and add prefix to all output
# suitable for logging

case "$1" in
    -h|--help) echo "$( basename "$0" ): run easyeffects if not running; else kill it"; exit 0 ;;
esac

pkill easyeffects || {
    sway-toolwait --waitfor com.github.wwmm.easyeffects easyeffects

    # Global bypass. 1 to enable, 2 to disable and 3 to get status:
    easyeffects --bypass 1
}

# Local Variables:
# mode: shell-script
# time-stamp-pattern: "4/TIME_STAMP=\"%:y%02m%02d.%02H%02M%02S\""
# eval: (add-hook 'before-save-hook 'time-stamp)
# End:
