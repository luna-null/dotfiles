case "$1" in
    -h|--help)
        echo "$( basename "$0" ): launch a process into background and add a prefix and datestamp to all output, suitable for logging"
        exit 0
        ;;
esac
               
CMD=$( basename "$1" )

exec "$@" 1>&1 2>&1 | while IFS= read -r line; do
    printf "[$CMD: %s] %s\n" "$(date '+%Y-%m-%d %H:%M:%S')" "$line"
done &

# Local Variables:
# mode: shell-script
# time-stamp-pattern: "4/TIME_STAMP=\"%:y%02m%02d.%02H%02M%02S\""
# eval: (add-hook 'before-save-hook 'time-stamp)
# End:
